<h1>Listing advertisements</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Flash file</th>
    <th>Top</th>
    <th>Left</th>
    <th>Width</th>
    <th>Height</th>
    <th>Time interval</th>
    <th>Playlist begin</th>
    <th>Playlist finish</th>
    <th>Venue</th>
  </tr>

<% @advertisements.each do |advertisement| %>
  <tr>
    <td><%=h advertisement.name %></td>
    <td><%=h advertisement.flash_file %></td>
    <td><%=h advertisement.top %></td>
    <td><%=h advertisement.left %></td>
    <td><%=h advertisement.width %></td>
    <td><%=h advertisement.height %></td>
    <td><%=h advertisement.time_interval %></td>
    <td><%=h advertisement.playlist_begin %></td>
    <td><%=h advertisement.playlist_finish %></td>
    <td><%=h advertisement.venue_id %></td>
    <td><%= link_to 'Show', advertisement %></td>
    <td><%= link_to 'Edit', edit_advertisement_path(advertisement) %></td>
    <td><%= link_to 'Destroy', advertisement, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New advertisement', new_advertisement_path %>
