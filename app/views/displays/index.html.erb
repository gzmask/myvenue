<h1>Listing displays</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Is customize</th>
    <th>Html</th>
    <th>Css</th>
    <th>Venue</th>
  </tr>

<% @displays.each do |display| %>
  <tr>
    <td><%=h display.name %></td>
    <td><%=h display.is_customize %></td>
    <td><%=h display.venue_id %></td>
    <td><%= link_to 'Show', display %></td>
    <td><%= link_to 'Edit', edit_display_path(display) %></td>
    <td><%= link_to 'Destroy', display, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

