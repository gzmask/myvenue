<h1>Listing schedules</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Venue</th>
    <th>Top</th>
    <th>Left</th>
    <th>Width</th>
    <th>Height</th>
    <th>Title color</th>
    <th>Title back color</th>
    <th>Content color</th>
    <th>Content back color</th>
  </tr>

<% @schedules.each do |schedule| %>
  <tr>
    <td><%=h schedule.name %></td>
    <td><%=h schedule.venue_id %></td>
    <td><%=h schedule.top %></td>
    <td><%=h schedule.left %></td>
    <td><%=h schedule.width %></td>
    <td><%=h schedule.height %></td>
    <td><%=h schedule.title_color %></td>
    <td><%=h schedule.title_back_color %></td>
    <td><%=h schedule.content_color %></td>
    <td><%=h schedule.content_back_color %></td>
    <td><%= link_to 'Show', schedule %></td>
    <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
    <td><%= link_to 'Destroy', schedule, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New schedule', new_schedule_path %>