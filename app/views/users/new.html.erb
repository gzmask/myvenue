<div class="sub_menu">
<%= link_to 'Back', users_path %>
</div>
<h1>New user</h1>

<% form_for(@user) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.text_field :password %>
  </p>
  <p>
    <%= f.label :is_client %><br />
    <%= f.check_box :is_client %>
  </p>
  <p>
    <%= f.label :is_admin %><br />
    <%= f.check_box :is_admin %>
  </p>
  <p>
    <%= f.label :is_developer %><br />
    <%= f.check_box :is_developer %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

